<%  if @tenant.errors.any? %>
  <h3> The following errors prevented the tenant from being saved</h3>
  <ul>
    <% @tenant.errors.full_messages.each do |message|  %>
    <li><%= message %></li>
    <% end  %>
  </ul>
<% end  %>


<form action="/apartments/<%= @apartment.id %>/tenants" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type='text' name='tenant[name]'/>name<br/>
  <input type='number' name='tenant[age]'>age</input><br/>
  <input type='text' name='tenant[apartment_id]' value='<%= @apartment.id %>'>apartment building ID</input><br/>
  <input type='checkbox' name='tenant[on_strike]'>on_strike?</input><br/>
  <input type='submit' value='Create new tenant'/>
</form>
<br>

