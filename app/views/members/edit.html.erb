<form action="/members/<%= @member.id  %>"  method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <p>Edit Member Information</p>
  <input type='text' name='member[primary_member]' value="<%= @member.primary_member %>"/>Member Name<br>
  <input type='checkbox' name='member[monthly_membership]'>Monthly Membership?</input><br>
  <input type='number' name='member[people_in_membership]' value="<%= @member.people_in_membership %>"/>Number of people in membership</input><br>
  <input type='submit'/>
</form>
